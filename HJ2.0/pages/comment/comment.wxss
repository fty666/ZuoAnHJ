.comment{
    margin-top: 20rpx;
    background-color: #fff;
}
.goods-info{
    display: flex;
    justify-content: flex-start;
    width: 100%;
    padding: 20rpx; 
    box-sizing: border-box;
}
.goods-info .goods-name{
    margin-left: 30rpx; 
    font-size: 24rpx;
    color: #666;
}
.mycomment{
    padding: 20rpx;
    box-sizing: border-box;  
    width: 100%;
    /* height: 200rpx; */
    font-size: 25rpx;
    /* border: 1px solid red; */
}
.mycomment textarea{
    padding: 10rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    border:1px solid #eee; 
}
.addimage{
    display: flex;
    justify-content: flex-start;
    width: 100%;
    margin-bottom: 50rpx;  
    padding: 20rpx;
    box-sizing: border-box;
    /* border: 1px dashed #ccc;  */
}
.addimage-each{
    position: relative;
    margin-right: 10rpx; 
    border: 1px dashed #ccc;  
    
}
.addimage-each image{
    position: absolute;
    top: 0;
    left: 0;
    /* border: 1px solid red; */
}
.addimage-each .cancle{
    position: absolute;
    top: -15rpx;
    left: 105rpx;
    font-size:30rpx;
    text-align: center;
    line-height: 40rpx; 
    border-radius: 50rpx;
    /* border: 1px solid red; */
    background-color: #aaa;
    opacity: 0.5;
}

