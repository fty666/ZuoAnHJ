page {
  font-size: 26rpx;
}

.search {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.form {
  display: flex;
  justify-content: center;
  align-items: center;
  color: black;
  border-radius: 33rpx;
  background-color: #dcdcdc;
}

.form image {
  margin-left: 135rpx;
}

.search image {
  margin: 0 19rpx;
}

.group_class {
  margin-top: 15rpx;
  display: flex;
  justify-content: flex-start;
  background-color: #f0f0f0;
}

.goods_group {
  display: flex;
  flex-direction: column;
  border-top: 2rpx solid #aaa;
}

.good_group_each {
  width: 164rpx;
  height: 105rpx;
  text-align: center;
  line-height: 105rpx;
  border-left: 2rpx solid #aaa;
  border-right: 2rpx solid #aaa;
  border-bottom: 2rpx solid #aaa;
  background-color: #e5e5e5;
}

.active {
  border: 0px solid #fff;
  background-color: #f0f0f0;
}

.adv_class {
  padding-left: 18rpx;
  box-sizing: border-box;
}

.adv {
  margin-top: 20rpx;
  /* width: 548rpx; *//* border: 1px solid red; */
}

.kind1 {
  /* border: 1rpx solid red; *//* display: flex; */
  position: relative;
  display: inline-block;
  text-align: center;
  line-height: 85rpx;
  height: 88rpx;
  width: 20%;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.kind {
  display: inline-block;
  text-align: center;
  line-height: 85rpx;
}

/*选项框  */

.category {
  width: 100%;
  display: flex;
  justify-content: space-around;
  white-space: nowrap;
  background: white;
  position: relative;
}

/*分类  */

.hua {
  width: 100%;
  display: flex;
  white-space: nowrap;
  background: #f0f0f0;
  position: relative;
  flex-wrap: wrap;
  flex-direction: row;
  /* white-space: pre-wrap;      */
}

.more {
  width: 100%;
  /* height: 200rpx; */
  background: #f0f0f0;
  margin-top: 20rpx;
  /* display: flex; *//* flex-wrap: wrap; */
}

.specifics {
  border-radius: 50rpx;
  color: black;
  text-align: center;
  line-height: 66rpx;
  background: white;
  margin-left: 15rpx;
  font-size: 25rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 30rpx;
  display: inline-block;
  flex-wrap: wrap;
  flex-direction: row;
  z-index: 99999;
  position: relative;
  /* white-space: pre-wrap; */
}

.xia {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  /* margin-top: -120rpx; *//* margin-left: 30rpx; */
}

/*商品列表  */

.goods-list {
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-around; */
  width: 100%;
  
}

.goods-info {
  float: left;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.goods-img {
  margin-top: 16rpx;
  text-align: center;
}

.goods-name {
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  /* text-overflow: ellipsis;
  white-space: nowrap; */
  width: 100%;
}

.sell {
  padding: 0 20rpx;
  font-size: 25rpx;
  color: red;
}

.price-cart {
  display: flex;
  /* justify-content: space-between; */
  padding: 20rpx;
  align-items: center;
}

.styles {
  /* border: 10rpx solid green; */
  border-bottom: 4rpx solid red;
  color: #ce000d;
}

.bj {
  opacity: 0.5;
}

.back {
  background: #dcdcdc;
}

.member-price {
  background: #d83030;
  color: white;
  font-size: 28rpx;
  padding-top: 10rpx;
  /* margin-left: 30rpx; */
  line-height: 31rpx;
  border: 1rpx solid red;
  /* text-decoration: line-through; */
}

.costprice {
  background: white;
  color: #ddd;
  font-size: 28rpx;
  padding-top: 10rpx;
  line-height: 31rpx;
  text-decoration: line-through;
  border: 1rpx solid red;
  margin-left: -27rpx;
}
