} */

.ziti {
  width: 196rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  color: #fff;
  background-color: #ffb97a;
}

.immediate-sale {
  width: 196rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  color: #fff;
  background-color: #ce000d;
}

/*遮盖层  */

.covering-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #bbb;
  opacity: 0.5;
  z-index: 8888;
}

.application-for-repurchase {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  width: 100%;
  /* height: 5rpx; */
  font-size: 25rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.application-for-repurchase-each {
  margin-left: 50rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  /* border: 1px solid red;   */
}

radio .wx-radio-input {
  border-radius: 50%; /* 圆角 */
  width: 30rpx;
  height: 30rpx;
}

.immediate-sales {
