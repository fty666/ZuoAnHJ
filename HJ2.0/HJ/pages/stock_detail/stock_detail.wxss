.swiper {
  text-align: center;
  width: 100%;
  /* border: 1px solid red;  */
}

.swiper swiper {
  width: 100%;
  height: 100%;
}

.swiper image {
  width: 100%;
  /* border: 1px solid red; */
}

.goods-name {
  padding: 20rpx;
  font-size: 30rpx;
  color: #333;
}

.price-cart {
  display: flex;
  justify-content: flex-start;
  padding-left: 20rpx;
  margin-bottom: 10rpx;
  font-size: 40rpx;
  color: #ec2525;
}

.member-price {
  font-size: 26rpx;
  color: #baa589;
  padding-top: 10rpx;
  margin-left: 45rpx;
}

.stock {
  display: flex;
  justify-content: flex-start;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #bbb;
}

.stock .selling {
  margin-left: 72rpx;
}

.number {
  padding: 20rpx;
  font-size: 40rpx;
  line-height: 50rpx;
  color: #777;
  /* border: 1px solid red;  */
}

.jian, .num, .jia {
  border: 2rpx solid #ccc;
  text-align: center;
  line-height: 50rpx;
  font-size: 50rpx;
  float: left;
}

.jian {
  margin-left: 30rpx;
  border-radius: 5rpx 0 0 5rpx;
}

.jia {
  border-radius: 0 5rpx 5rpx 0;
}

.num {
  border-left: 0;
  border-right: 0;
  font-size: 30rpx;
}

.address {
  height: 100rpx;
  font-size: 30rpx;
  color: #444;
  padding-top: 40rpx;
  margin-left: 20rpx;
  /* border: 1px solid red;   */
}

.address view {
  float: right;
  color: #aaa;
}

.msg {
  margin-left: 110rpx;
  font-size: 25rpx;
  color: #aaa;
  margin-bottom: 25rpx;
  /* border: 1px solid red;   */
}

.comment {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #666;
}

.short-comment, .long-comment {
  margin: 10rpx 20rpx;
  font-size: 26rpx;
  color: #666;
}

.comment-img {
  display: flex;
  justify-content: flex-start;
  margin-right: 5rpx;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
  flex-wrap: wrap;
}

/* .comment-img image {

} */

.bottom-btn {
  position: fixed;
  top: 91.7%;
  left: 0;
  display: flex;
  flex-direction: row;
  background-color: #fff;
}

.custom-service {
  padding-top: 10rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  box-sizing: border-box;
}

