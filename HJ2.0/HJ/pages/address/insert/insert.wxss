/*背景颜色  */

page {
    background: #f1f0ee;
}

/*整体  */

.body {
    margin-top: 20rpx;
    background: white;
}

/*收货人  */

.user {
    width: 100%;
    margin-left: 40rpx;
    line-height: 72rpx;
    font-size: 30rpx;
    color: #333;
}

/*地址  */

.add {
    width: 100%;
    margin-left: 25rpx;
    line-height: 70rpx;
    font-size: 26rpx;
    color: #666;
}

/*边距  */

.bianju {
    width: 100%;
    background: #ddd;
    margin-top: 25rpx;
}

/*编辑  */

.bianji {
    font-size: 30rpx;
    margin-left: 10rpx;
    line-height: 80rpx;
    float: left;
}

/*选框按钮  */

.check {
    color: red;
    margin-left: 30rpx;
    float: left;
    margin-top: 10rpx;
}

/*删除图标  */

.del {
    margin-top: 25rpx;
    margin-left: 20rpx;
    float: left;
}

/*添加新地址  */

.insert {
    width: 96%;
    background: red;
    color: white;
    border-radius: 10rpx;
}

.icon {
    margin-bottom: 10rpx;
    margin-left: 200rpx;
    margin-top: 290rpx;
}

.text {
    width: auto;
    font-size: 28rpx;
    line-height: 35rpx;
    color: #999;
    margin-left: 188rpx;
}
