  background: #fbfbfb;
}

.z2 {
  margin-top: 22rpx;
  border: 2rpx solid #f9e9f0;
  /* box-shadow: 5rpx 5rpx 3rpx #f9e9f0;  */
  float: left;
}

.name {
  font-weight: bold;
  font-size: 26rpx;
  margin-top: 10rpx;
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
}

.miaosu {
  margin-top: 12rpx;
  font-size: 25rpx;
  color: #959698;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.price {
  margin-left: 40rpx;
  margin-top: 15rpx;
  font-size: 30rpx;
  color: #ce0006;
}

.authorize-contianer {
  background: #fff;
  text-align: center;
  margin-top: 300rpx;
}

.authorize-icon {
  display: block;
  margin: 0 auto;
  padding-bottom: 10rpx;
}

.auth-item {
  padding: 15rpx 0;
}

.btn-authorize {
  margin: 100rpx 50rpx;
}

/*定位  */

.rel {
  position: relative;
}

.abs {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 99999999;
  background: rgba(0, 0, 0, 0.5);
}

.member-price {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #d83030;
  color: white;
  font-size: 28rpx;
  border: 1rpx solid red;
}

.costprice {
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
  color: #ddd;
  font-size: 28rpx;
  text-decoration: line-through;
  border: 1rpx solid red;
}

.sell {
  /* margin-left: 30rpx; */
  font-size: 28rpx;
  color: red;
  margin-top: 5rpx;
}

.plain {
  border: none;
  border-color: transparent;
}

.recomm {
    width: 100%;
}
.scroll{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: center;
}

.nav{
    float: left;
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

/*跑马灯  */

.marquee_container{
  /* background-color: #000; */
  height: 40rpx;
  line-height: 40rpx;
  position: relative;
  width: 100%;
}
.marquee_container:hover{
  /* 不起作用 */
  animation-play-state: paused;
}
.marquee_text{
  color:#b4b4b4;
  font-size: 28rpx;
  display: inline-block;
  white-space: nowrap;
  animation-name: around;
  animation-duration: 1000;  /*过渡时间*/
  animation-iteration-count: infinite;
  animation-timing-function:linear;
}
