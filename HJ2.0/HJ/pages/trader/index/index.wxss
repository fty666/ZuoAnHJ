/*国家图标  */

.xh {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 30rpx 0rpx;
}

.guojia {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}

.tubiao {
  border-radius: 50%;
  margin-left: 15rpx;
}

.zi {
  font-size: 25rpx;
  /* width: 100rpx; */
