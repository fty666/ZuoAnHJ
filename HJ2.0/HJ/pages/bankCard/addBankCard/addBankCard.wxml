<form bindsubmit="addBankCard" class='form'>
  <view class='form-each' style='height: {{px2rpxHeight*100}}px;'>
    <label class='label' style='width: {{px2rpxWidth*150}}px;height:{{px2rpxHeight*100}}px;'>姓名：</label>
    <input name="owner" placeholder='请输入您的姓名' />
  </view>
  <view class='form-each' style='height: {{px2rpxHeight*100}}px;'>
    <label class='label' style='width: {{px2rpxWidth*150}}px;height:{{px2rpxHeight*100}}px;'>手机：</label>
    <input name="mobile" type='number' placeholder='请输入您的手机号' />
  </view>
  <view class='form-each' style='height: {{px2rpxHeight*100}}px;'>
    <label class='label' style='width: {{px2rpxWidth*150}}px;height:{{px2rpxHeight*100}}px;'>身份证：</label>
    <input name="ID_card" type='number' placeholder='请输入您的身份证号' />
  </view>
  <view class='form-each' style='height: {{px2rpxHeight*100}}px;'>
    <label class='label' style='width: {{px2rpxWidth*150}}px;height:{{px2rpxHeight*100}}px;'>银行卡：</label>
    <input name="card_no" type='number' placeholder='请输入您的银行卡号' />
  </view>
  <view class='form-each' style='height: {{px2rpxHeight*100}}px;'>请选择开户行：{{bank}}</view>
  <scroll-view scroll-y class='img-scroll' style='height:{{px2rpxHeight*580}}px;'>
    <view class='img' style='height:{{px2rpxHeight*580}}px;'>
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="中国农业银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/ABC.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="交通银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/BCM.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="中国银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/BOC.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="中国建设银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/CCB.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="中国光大银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/CEB.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="中信银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/CITICIB.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="招商银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/CMB.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="中国民生银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/CMBC.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="华夏银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/HB.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="海口联合农商银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/HK.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="中国工商银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/ICBC.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="中国平安银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/PABC.png" />
      <image catchtap='selectBank' style='width:{{px2rpxHeight*340}}px;height:{{px2rpxHeight*136}}px;' data-bank="浦发银行" src="https://zuoanzac.oss-cn-beijing.aliyuncs.com/SPDB.png" />
    </view>
  </scroll-view>
  <view class='btn'>
    <button type='primary' formType="submit" class='mt10 '>提交</button>
  </view>
</form>