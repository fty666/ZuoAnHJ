<view class="seckill-countdown">
    折扣商品
</view>
<view class="container" style="background-image:url('https://zuoanzac.oss-cn-beijing.aliyuncs.com/full.png');background-repeat:no-repeat; background-size:100% 100%;">
    <view class="goods-seckill" style="width: 100%;height:{{px2rpxHeight*865*2}}rpx;">
        <scroll-view scroll-y="true" style='width:100%;;height:100%'>
            <view class="goods-list">
                <block wx:for="{{killinfo}}" wx:key="{{index}}">
                    <view class="goods-info" style="width:{{px2rpxWidth*345*2}}rpx;height:{{px2rpxHeight*480*2}}rpx;" catchtap='info' data-id='{{item.goodsId}}'>
                        <view class="goods-img">
                            <image src='{{serverUrl+item.img}}' style="width:{{px2rpxWidth*313}}px;height:{{px2rpxHeight*244}}px;"></image>
                        </view>
                        <view class="goods-name">{{item.name}}</view>
                        <view class='show'>已售:{{item.saleCount}}</view>
                        <view class="price-cart">
                            <view class="member-price" style="width: {{px2rpxWidth*126}}px;height: {{px2rpxHeight*40}}px;">¥{{item.price}}</view>
                            <view class='costprice' style="width:{{px2rpxWidth*105}}px;height:{{px2rpxHeight*40}}px;">￥{{item.oriPrice}}</view>
                            <!-- <image style="width:{{px2rpxWidth*70}}px; height:{{px2rpxHeight*44}}px;" src='../../images/cart2.png'></image> -->
                        </view>
                        <view class='text'>用户享受{{item.discount}}折优惠</view>
                    </view>
                </block>
            </view>
        </scroll-view>
    </view>
</view>