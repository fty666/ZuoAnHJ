.container {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 1;
    /* background-image:  *//* background-color: #f4475a; */
    padding: 0px;
}

.seckill-countdown {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9999;
    width: 100%;
    height: 60rpx;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    line-height: 60rpx;
    background-color: #000;
    opacity: 0.5;
}

.goods-seckill {
    margin-top: 340rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.goods-list {
    /* display: flex; */
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
    width: 100%;
    /* background-color: red; */
}

.goods-info {
    float: left;
    margin-bottom: 20rpx;
    /* margin:0 0 20rpx 20rpx; */
    background-color: #fff;
    margin-left: 10rpx;
}

.goods-img {
    margin-top: 16rpx;
    text-align: center;
}

/* .goods-img image{
    border: 1px solid red;
} */

.goods-name {
    padding: 0 20rpx;
    font-size: 26rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.price-cart {
    display: flex;
    /* justify-content:space-between; *//* padding: 20rpx; */
    align-items: center;
    margin-top: 20rpx;
    margin-left: 20rpx;
}

.text {
    margin-left: 20rpx;
    margin-top: 10rpx;
    color: #ddd;
    font-size: 25rpx;
}

.costprice {
    background: white;
    color: #ddd;
    font-size: 30rpx;
    padding-top: 10rpx;
    line-height: 25rpx;
    text-decoration: line-through;
    border: 1rpx solid red;
    margin-left: -34rpx;
}

.member-price {
    background: #d83030;
    color: white;
    font-size: 30rpx;
    padding-top: 10rpx;
    margin-left: 5rpx;
    line-height: 25rpx;
    border: 1rpx solid red;
    /* text-decoration: line-through; */
}

.show {
    /* padding-top: 20rpx; */
    font-size: 26rpx;
    color: #d83030;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-left: 20rpx;
}
